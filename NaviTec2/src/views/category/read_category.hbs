{{> navigation_category }}
<div class="container p-4">
    
    <div class="row">

        {{#each category}}

            <div class="col-md-3">
                
                <div class="card text-center">

                    <div style="background-color: #58D68D" class="card-body">

                        <a href=""> 

                            <h3 class="card-title text-uppercase">  

                              {{category_name}}      

                            </h3>

                        </a>
                                <p class = "m-2" > Category Code: {{category_code}} </p>
                                <p class = "m-2" > Status: {{status}} </p>
                                <p class = "m-2" > Description: {{description}} </p>
                                <a href="/category/edit_category/{{category_code}}" class="btn btn-primary"> Update  </a>
                                <a href="/category/delete/{{category_code}}" class="btn btn-danger"> Delete </a>


                    </div>

                </div>

                <br>

            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div style="background-color: #D6B957" class="card card-body text-center">
                    <p> Something went wrong, there's no categories yet</p>
                    <a href="/category/add_category"> Please, Add one!</a>
                </div>  
            </div>
        {{/each}}

    </div>



</div>




