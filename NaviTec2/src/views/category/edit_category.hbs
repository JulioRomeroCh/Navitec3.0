{{> navigation_category }}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/category/edit_category/{{category.category_code}}" method = "POST">
                        <div class="form-group">
                            <input type="text" value="{{category.category_code}}" class = "form-control" name = "Category_Code" placeholder="Category_Code" autofocus required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" value="{{category.category_name}}" class = "form-control" name = 'Category_Name'  placeholder="Category_Name" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" value="{{category.status}}" class = "form-control" name = 'Status'  placeholder="Status" required>
                        </div>

                        <br>

                        
                        <div class="form-group">
                            <input type="text" value="{{category.description}}" class = "form-control" name = 'Description'  placeholder="Description" required>
                        </div>

                        <br>
                        <center>

                        
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Update
                            </button>
                        </center>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>



















