{{> navigation_toy }}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/toy/add" method = "POST">

                        <div class="form-group">
                            <input type="number" class = "form-control" name = "Toy_Code" placeholder="Toy_Code" autofocus required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" class = "form-control" name = 'Age_Range'  placeholder="Age_Range" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" class = "form-control" name = 'Description'  placeholder="Description" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="file" class = "form-control" name = 'Photo'  placeholder="Photo">
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="number" placeholder="1.0" step="0.01" min="0" max="10000000" class = "form-control" name = 'Cost'  placeholder="Cost" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" class = "form-control" name = 'Name'  placeholder="Name" required>
                        </div>

                        <br>
                        <center>

                        
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Submit
                            </button>
                        </center>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>





















