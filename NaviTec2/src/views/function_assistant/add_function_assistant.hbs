{{> navigation_function_assistant}}

<div class="container p-4">
    <div class="row">
        
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/function_assistant/add" method = "POST">

                        <div class="form-group">
                            <input type="text" class = "form-control" name = "Assistant_ID" placeholder="Assistant_ID" autofocus required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" class = "form-control" name = 'Function_Name'  placeholder="Function_Name" required>
                        </div>

                        <center>
                        <br>
                        <select name="Assistant_ID" class="custom-select" placeholder="m">
                            {{#each santas_assistant}}                            
                            <option value="{{assistant_id}}">{{assistant_id}} | {{username}}</option>
                            {{/each}}
                        </select>
                        <br>
                        </center>

                        <center>
                        <br>
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Submit
                            </button>
                        </center>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    
    <div class="row">

        {{#each santas_assistant}}

            <div class="col-md-3">
                
                <div class="card text-center">

                    <div style="background-color: #7DCEA0" class="card-body">

                        <a href=""> 

                            <h3 class="card-title text-uppercase">  

                              {{name}}      

                            </h3>

                        </a>
                                <p class = "m-2" > ID: {{assistant_id}} </p>
                                <p class = "m-2" > Start Date: {{start_date}} </p>
                                <p class = "m-2" > Username: {{username}} </p>
                                <a href="/santas_assistant/edit_santas_assistant/{{assistant_id}}" class="btn btn-primary"> Update  </a>
                                <a href="/santas_assistant/delete/{{assistant_id}}" class="btn btn-danger"> Delete </a>


                    </div>

                </div>

                <br>

            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div style="background-color: #7DCEA0" class="card card-body text-center">
                    <p> Something went wrong, there's no santa's assistant yet</p>
                    <a href="/santas_assistant/add_santas_assistant"> Please, Add one!</a>
                </div>  
            </div>
        {{/each}}

    </div>



</div>







