{{> navigation_user }}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/user/edit_user/{{user.username}}" method = "POST">
                        <div class="form-group">
                            <input type="text" value="{{user.username}}" class = "form-control" name = "Username" placeholder="Username" autofocus required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="password" value="{{user.password}}" class = "form-control" name = 'Password'  placeholder="Password" required>
                        </div>

                        <br>
                        <div class="form-group">
                            <input type="text" value="{{user.role}}" class = "form-control" name = 'Role'  placeholder="Role" required>
                        </div>
                        <br>

                        <select name="Role_in_User" class="custom-select" placeholder="m">  
                            <option selected>{{user.role}}</option>                         
                            <option value="Assistant">Assistant</option>
                            <option value="Parent">Parent</option>
                            <option value="Kid">Kid</option>
                        </select>

                        <center>
                      
                        <div class="form-group">
                            <button class = "btn btn-success btn-block">
                                Update
                            </button>
                        </center>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>



















