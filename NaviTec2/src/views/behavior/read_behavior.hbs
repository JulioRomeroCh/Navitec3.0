{{> navigation_behavior }}
<div class="container p-4">
    
    <div class="row">

        {{#each behavior}}

            <div class="col-md-3">
                
                <div class="card text-center">

                    <div style="background-color: #F5B041" class="card-body">

                        <a href=""> 

                            <h3 class="card-title text-uppercase">  

                              {{behavior_id}}      

                            </h3>

                        </a>
                                <p class = "m-2" > Date: {{date}} </p>
                                <p class = "m-2" > Indication: {{indication}} </p>
                                <p class = "m-2" > Description: {{description}} </p>
                                <a href="/behavior/edit_behavior/{{behavior_id}}" class="btn btn-primary"> Update  </a>
                                <a href="/behavior/delete/{{behavior_id}}" class="btn btn-danger"> Delete </a>


                    </div>

                </div>

                <br>

            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div style="background-color: #D6B957" class="card card-body text-center">
                    <p> Something went wrong, there's no behaviors yet</p>
                    <a href="/behavior/add_behavior_id"> Please, Add one!</a>
                </div>  
            </div>
        {{/each}}

    </div>



</div>




